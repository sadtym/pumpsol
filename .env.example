# Telegram Bot Configuration (REQUIRED)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=your_telegram_channel_id_here

# Optional: Send startup message when bot starts
SEND_STARTUP_MESSAGE=true

# Solana RPC URL (Optional - defaults to mainnet-beta)
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# Scanner Settings
POLL_INTERVAL=3000
MIN_LIQUIDITY=300
MIN_VOLUME=50
MIN_VOLUME_24H=1000
MAX_AGE=10

# Security Filters
CHECK_MINT_AUTHORITY=true
CHECK_LIQUIDITY_LOCK=true
CHECK_HOLDER_DISTRIBUTION=true
MAX_HOLDER_CONCENTRATION=10

# Banned Words (comma separated)
# Default: test,fake,scam,rug,honey,ponzi,dump,sex,porn,xxx,adult,nude,...
BANNED_WORDS=test,fake,scam,rug,honey,ponzi,dump

# Logging
ENABLE_LOGS=true
